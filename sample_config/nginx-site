server {
	client_max_body_size 20M;

	listen 80 default_server;
	listen [::]:80 default_server;

	# SSL configuration
	#
	#listen 443 ssl default_server;
	#listen [::]:443 ssl default_server;
	#ssl_certificate /var/www/cert/server.cer;
	#ssl_certificate_key /var/www/cert/server.key;
	#
	# you can generate a self signed cert this way
	#mkdir /var/www/cert
	#openssl req -x509 -newkey rsa:4096 -sha256 -days 3650 -nodes -keyout /var/www/cert/server.key -out /var/www/cert/server.cer -subj "/CN=osm.example.com" -addext "subjectAltName=DNS:osm.example.com"

	root /var/www/osm/php/public;

	index index.php;

	server_name _;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;
	}

	# pass PHP scripts to FastCGI server

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_param OSM_DATA_DIR "/var/www/osm-data/";
		fastcgi_param PHP_VALUE "post_max_size=256M;\nupload_max_filesize=256M;\nmax_execution_time=300;";
		fastcgi_pass unix:/run/php/php8.2-fpm.sock;
		fastcgi_read_timeout 300;
	}
}
